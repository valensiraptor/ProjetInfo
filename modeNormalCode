    public void keyTyped(KeyEvent a) {
    }

    public void keyPressed(KeyEvent a) {
        if(a.getKeyChar()=='A'){
            touche1 = true;
        }
        if(a.getKeyChar()=='Z'){
            touche2 = true;
        }
        if(a.getKeyChar()=='E'){
            touche3 = true;
        }
        if(a.getKeyChar()=='R'){
            touche4 = true;
        }
        if(a.getKeyChar()=='T'){
            touche5 = true;
        }
        if(a.getKeyChar()=='Y'){
            touche6 = true;
        }
        if(a.getKeyChar()=='U'){
            touche7 = true;
        }
        if(a.getKeyChar()=='I'){
            touche8 = true;
        }
        if(a.getKeyChar()=='O'){
            touche9 = true;
        }
        if(a.getKeyChar()=='P'){
            touche10 = true;
        }
        if(a.getKeyChar()=='2'){
            touche11 = true;
        }
        if(a.getKeyChar()=='3'){
            touche12 = true;
        }
        if(a.getKeyChar()=='5'){
            touche13 = true;
        }
        if(a.getKeyChar()=='6'){
            touche14 = true;
        }
        if(a.getKeyChar()=='7'){
            touche15 = true;
        }
        if(a.getKeyChar()=='9'){
            touche16 = true;
        }
        if(a.getKeyChar()=='0'){
            touche17 = true;
        }
    }

    public void keyReleased(KeyEvent a) {
        if(a.getKeyChar()=='A'){
            touche1 = false;
        }
        if(a.getKeyChar()=='Z'){
            touche2 = false;
        }
        if(a.getKeyChar()=='E'){
            touche3 = false;
        }
        if(a.getKeyChar()=='R'){
            touche4 = false;
        }
        if(a.getKeyChar()=='T'){
            touche5 = false;
        }
        if(a.getKeyChar()=='Y'){
            touche6 = false;
        }
        if(a.getKeyChar()=='U'){
            touche7 = false;
        }
        if(a.getKeyChar()=='I'){
            touche8 = false;
        }
        if(a.getKeyChar()=='O'){
            touche9 = false;
        }
        if(a.getKeyChar()=='P'){
            touche10 = false;
        }
        if(a.getKeyChar()=='2'){
            touche11 = false;
        }
        if(a.getKeyChar()=='3'){
            touche12 = false;
        }
        if(a.getKeyChar()=='5'){
            touche13 = false;
        }
        if(a.getKeyChar()=='6'){
            touche14 = false;
        }
        if(a.getKeyChar()=='7'){
            touche15 = false;
        }
        if(a.getKeyChar()=='9'){
            touche16 = false;
        }
        if(a.getKeyChar()=='0'){
            touche17 = false;
        }
    }

