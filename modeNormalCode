    if(touche17 == true){
        buffer.drawImage( touche_17, 685, 0, this);
             }
    repaint();
    //paint(this.getGraphics());
    g.drawImage(ArrierePlan,0,0,this);

        }
    
    
    public static void main(String[] args) {
        modeNormal tamer = new modeNormal(42, 42);
