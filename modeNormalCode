        } catch (IOException e) {}        
        try {  
             touche_17 = ImageIO.read(new File("toucheNoire.jpg"));
        } catch (IOException e) {}        
        
        this.setSize(piano.getWidth() , piano.getHeight());
        dim = getSize();
        ArrierePlan = new BufferedImage(dim.width, dim.height, BufferedImage.TYPE_INT_RGB);
        buffer = ArrierePlan.getGraphics();
        this.setTitle("Mode Normal");
        //this.isFocusable();
        addKeyListener(this);
        

        setVisible(true);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        
    } 
    
    public void paint(Graphics g) {
    buffer.drawImage( piano, 0, 0, this);
    if(touche1 == true){
        buffer.drawImage( touche_1, 5, 0, this);
    }
    if(touche2 == true){
        buffer.drawImage( touche_2, 70, 0, this);
    }
    if(touche3 == true){
        buffer.drawImage( touche_3, 150, 0, this);
    }
    if(touche4 == true){
        buffer.drawImage( touche_4, 235, 0, this);
     }
    if(touche5 == true){
        buffer.drawImage( touche_5, 305, 0, this);
    }
    if(touche6 == true){
        buffer.drawImage( touche_6, 380, 0, this);
    }
    if(touche7 == true){
